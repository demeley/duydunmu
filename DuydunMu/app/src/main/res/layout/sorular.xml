<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="432dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/p_01_header" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="329dp"
        android:layout_height="45dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Sıkça Sorulan Sorular"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="329dp"
        android:layout_height="30dp"
        android:background="@drawable/p11_textbox"
        android:text="Duydun mu uygulamasının amacı nedir ?"
        android:textColor="@android:color/black"
        android:textDirection="firstStrongRtl"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.019" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="329dp"
        android:layout_height="70dp"
        android:background="@drawable/p11_textbox"
        android:text="Duydun mu uygulaması işaret cihazı kullanan işitme engelli bireylerin konuşma becerilerinin gelişmesini amaçlamıştır. "
        android:textColor="@android:color/tertiary_text_light"
        android:textDirection="firstStrongRtl"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="329dp"
        android:layout_height="30dp"
        android:background="@drawable/p11_textbox"
        android:text="Duydun mu uygulaması kimlere yöneliktir?"
        android:textColor="@android:color/black"
        android:textDirection="firstStrongRtl"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.019" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="329dp"
        android:layout_height="70dp"
        android:background="@drawable/p11_textbox"
        android:text="Duydun mu uygulaması işitme cihazı kullanan işitme engelli bireylerin kullanmasına yönelik bir uygulamadır. "
        android:textColor="@android:color/tertiary_text_light"
        android:textDirection="firstStrongRtl"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.028" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="329dp"
        android:layout_height="30dp"
        android:background="@drawable/p11_textbox"
        android:text="Duydun mu uygulaması nasıl kullanılır?"
        android:textColor="@android:color/black"
        android:textDirection="firstStrongRtl"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="329dp"
        android:layout_height="125dp"
        android:background="@drawable/p11_textbox"
        android:text="Duydun mu uygulaması açıldığında sizden aradığınız kelimeyi yazmanızı ister. Daha sonra yazılan kelimenin hecelemesi,kelimeyi anlatan fotoğraf ve video karşınıza çıkar. Ayrıca talep ettiğiniz kelimeleri de bize duydunn.mmu@gmail.com adresinden gönderebilirsiniz."
        android:textColor="@android:color/tertiary_text_light"
        android:textDirection="firstStrongRtl"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.032" />

    <Button
        android:id="@+id/ara2"
        android:layout_width="273dp"
        android:layout_height="64dp"
        android:background="@drawable/p12_btn_sorusor"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.256" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="432dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/p10_footer" />

    <Button
        android:id="@+id/soru"
        android:layout_width="68dp"
        android:layout_height="67dp"
        android:background="@drawable/p_05_btn_faq_active"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ara2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/ana"
        android:layout_width="68dp"
        android:layout_height="67dp"
        android:background="@drawable/p_06_search_passive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/ara2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/ekle"
        android:layout_width="68dp"
        android:layout_height="67dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/p_07_btn_add_passive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ara2"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>